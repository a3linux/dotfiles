# Bash aliases

OSNAME=`uname -s`

# Force tmux to use xterm-256color
alias tmux="tmux -2"

if [[ ${OSNAME} =~ "Darwin" ]]; then
    alias vim="mvim -v"
    alias ls="ls -G"
    alias ll="ls -Gl"
elif [[ ${OSNAME} =~ "Linux" ]]; then
    alias ls="ls --color"
    alias ll="ls -l --color"
fi

# Used to use cls as clear
alias cls="clear"

if [ -d $HOME/repos ]; then
    alias crepos="cd $HOME/repos"
fi

# vim: ts=4 sw=4 filetype=sh
